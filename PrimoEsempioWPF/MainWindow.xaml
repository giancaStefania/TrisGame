        <Button Name="B3" Click="cambiaCella" Width="50" Height="50" Background="LightBlue" Margin="409,209,333,160"  />
        <Button Name="C1" Click="cambiaCella" Width="50" Height="50"  Background="LightBlue" Margin="299,264,443,105"  />

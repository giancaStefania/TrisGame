        <Button Name="C3" Click="cambiaCella" Width="50" Height="50"  Background="LightBlue" Margin="409,264,333,105"  />
        <TextBlock Text="{DynamicResource scrittaGiocatore}" FontSize="33" TextAlignment="Center" Padding="30" Margin="34,0,56,292" Width="702"></TextBlock>
